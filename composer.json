{
  "name": "lum/lum-mailer",
  "description": "Lum Mailer",
  "license": "MIT",
  "authors":
  [
    {
      "name": "Timothy Totten",
      "email": "supernovus@gmail.com",
      "role": "Original Author"
    }
  ],
  "require":
  {
    "lum/lum-compat": "^2.0"
  },
  "require-dev":
  {
    "swiftmailer/swiftmailer": "^6.0",
    "sendgrid/sendgrid": "~4"
  },
  "suggest":
  {
    "swiftmailer/swiftmailer": "If using Swift transport, requires ^6.0.",
    "sendgrid/sendgrid": "If using SendGrid transport, requires ~4."
  },
  "autoload":
  {
    "psr-4":
    {
      "Lum\\": "lib"
    }
  },
  "extra":
  {
    "branch-alias":
    {
      "dev-main": "2.x-dev"
    }
  }
}